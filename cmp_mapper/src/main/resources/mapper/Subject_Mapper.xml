<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hfxt.cmp.mapper.ISubjectDao">
<!-- 新增的方法写在这里 -->


<!-- 保存非空列,返回受影响的行数 -->
	<insert id="saveSelective" useGeneratedKeys="true" keyProperty="Vo.id">
		Insert Into tb_subject 
		<trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="Vo.subjectName != null">subject_name,</if>
            <if test="Vo.desc != null">desc,</if>
            <if test="Vo.creatorId != null">creator_id,</if>
             create_time,
            <if test="Vo.updaterId != null">updater_id,</if>
            <if test="Vo.updateTime != null">update_time,</if>
           
		</trim>
		<trim prefix="Values (" suffix=")" suffixOverrides=",">
            <if test="Vo.subjectName != null">#{Vo.subjectName},</if>
            <if test="Vo.desc != null">#{Vo.desc},</if>
            <if test="Vo.creatorId != null">#{Vo.creatorId},</if>
            now(),
            <if test="Vo.updaterId != null">#{Vo.updaterId},</if>
            <if test="Vo.updateTime != null">#{Vo.updateTime},</if>
            
		</trim>
	</insert>
    
    <!-- 根据主键删除-->
	<delete id="delete">
		Delete From tb_subject
		Where id = #{id}
	</delete>
    
    <!-- 删除所有记录,返回受影响的行数 -->
	<delete id="deleteAll">
		Delete From tb_subject
	</delete>
    
    <!-- 更新非空列,返回受影响的行数 -->
	<update id="updateSelective">
		Update tb_subject
		<trim prefix="Set" suffixOverrides=",">
            <if test="Vo.subjectName != null">subject_name = #{Vo.subjectName},</if>
            <if test="Vo.desc != null">desc = #{Vo.desc},</if>
            <if test="Vo.creatorId != null">creator_id = #{Vo.creatorId},</if>
            <if test="Vo.createTime != null">create_time = #{Vo.createTime},</if>
            <if test="Vo.updaterId != null">updater_id = #{Vo.updaterId},</if>
            <if test="Vo.updateTime != null">update_time = #{Vo.updateTime},</if>
		</trim>
		Where tb_subject.id = #{Vo.id}
	</update>
    
    <resultMap type="SubjectVo" id="RM_Default">
        <id column="Subject_id" property="id"/>
        <result column="Subject_subjectName" property="subjectName"/>
        <result column="Subject_desc" property="desc"/>
        <result column="Subject_creatorId" property="creatorId"/>
        <result column="Subject_createTime" property="createTime"/>
        <result column="Subject_updaterId" property="updaterId"/>
        <result column="Subject_updateTime" property="updateTime"/>
	</resultMap>
    
     <!-- ResultMap -->
	<resultMap type="SubjectVo" id="RM_getVo_Auto">
		<discriminator javaType="int" column="_chooseRM">
			<case value="0" resultMap="RM_Default" /><!-- Auto -->
		</discriminator>
	</resultMap>
    
    <!-- 根据主键查询一条记录,通过'__chooseRM'控制返回的列 -->
	<select id="getVo_Auto" resultMap="RM_getVo_Auto">
		Select
		<include refid="Sql_SelectColumns" />
		#{chooseRM} As _chooseRM
		From	tb_subject	As	tb_subject
		Where
		tb_subject.id = #{id}
	</select>
    
    <!-- 传入id,判断是否存在该记录 -->
	<select id="isExist_Auto" resultType="boolean">
		Select Count(id) > 0
		From	tb_subject	As	tb_subject
		Where
		tb_subject.id = #{id}
	</select>
    
    <!-- 查询记录数量 -->
	<select id="queryCount_Auto" resultType="Long">
		Select Count(tb_subject.id)
		From	tb_subject	As	tb_subject
        <trim prefix="Where" prefixOverrides="And | Or">
			<include refid="Sql_Where"/>
		</trim>
	</select>
    
    <resultMap type="SubjectVo" id="RM_queryVos_Auto">
        <discriminator javaType="int" column="_chooseRM">
			<case value="0" resultMap="RM_Default" /><!-- Auto -->
		</discriminator>
	</resultMap>
    
    <!-- 查询记录集合,通过'__chooseRM'控制返回的列 -->
	<select id="queryVos_Auto" resultMap="RM_queryVos_Auto">
		Select
		<include refid="Sql_SelectColumns"/>
		#{SubjectSearch.chooseRM} As _chooseRM
		From	tb_subject	As	tb_subject
        <trim prefix="Where" prefixOverrides="And | Or">
			<include refid="Sql_Where"/>
		</trim>
		<include refid="Sql_Order"/>
		Limit #{SubjectSearch.offset},#{SubjectSearch.limit}
	</select>
    

    <resultMap type="SubjectVo" id="RM_getVo_AdminView">
		<!-- <discriminator javaType="int" column="_chooseRM"> -->
        <id column="Subject_id" property="id"/>
        <result column="Subject_subjectName" property="subjectName"/>
        <result column="Subject_desc" property="desc"/>
        <result column="Subject_creatorId" property="creatorId"/>
        <result column="Subject_createTime" property="createTime"/>
        <result column="Subject_updaterId" property="updaterId"/>
        <result column="Subject_updateTime" property="updateTime"/>
		<!-- </discriminator> -->
	</resultMap>
    
    <!-- 根据主键查询一条记录,专供AdminView调用 -->
	<select id="getVo_AdminView" resultMap="RM_getVo_AdminView">
		Select
		<include refid="Sql_SelectColumns" />
		#{chooseRM} As _chooseRM
		From	tb_subject	As	tb_subject
		Where
		tb_subject.id = #{id}
	</select>
    
    <resultMap type="SubjectVo" id="RM_getVo_preAdminEdit">
		<!-- <discriminator javaType="int" column="_chooseRM"> -->
        <id column="Subject_id" property="id"/>
        <result column="Subject_subjectName" property="subjectName"/>
        <result column="Subject_desc" property="desc"/>
        <result column="Subject_creatorId" property="creatorId"/>
        <result column="Subject_createTime" property="createTime"/>
        <result column="Subject_updaterId" property="updaterId"/>
        <result column="Subject_updateTime" property="updateTime"/>
		<!-- </discriminator> -->
	</resultMap>
    
    <!-- 根据主键查询一条记录,专供preAdminEdit调用 -->
	<select id="getVo_preAdminEdit" resultMap="RM_getVo_preAdminEdit">
		Select
		<include refid="Sql_SelectColumns" />
		#{chooseRM} As _chooseRM
		From	tb_subject	As	tb_subject
		Where
		tb_subject.id = #{id}
	</select>
    
    <resultMap type="SubjectVo" id="RM_getVo_AdminEdit">
		<!-- <discriminator javaType="int" column="_chooseRM"> -->
        <id column="Subject_id" property="id"/>
        <result column="Subject_subjectName" property="subjectName"/>
        <result column="Subject_desc" property="desc"/>
        <result column="Subject_creatorId" property="creatorId"/>
        <result column="Subject_createTime" property="createTime"/>
        <result column="Subject_updaterId" property="updaterId"/>
        <result column="Subject_updateTime" property="updateTime"/>
		<!-- </discriminator> -->
	</resultMap>
    
    <!-- 根据主键查询一条记录,专供AdminEdit调用 -->
	<select id="getVo_AdminEdit" resultMap="RM_getVo_AdminEdit">
		Select
		<include refid="Sql_SelectColumns" />
		#{chooseRM} As _chooseRM
		From	tb_subject	As	tb_subject
		Where
		tb_subject.id = #{id}
	</select>
    
    <resultMap type="SubjectVo" id="RM_queryVos_AdminList">
		<!-- <discriminator javaType="int" column="_chooseRM"> -->
        <id column="Subject_id" property="id"/>
        <result column="Subject_subjectName" property="subjectName"/>
        <result column="Subject_desc" property="desc"/>
        <result column="Subject_creatorId" property="creatorId"/>
        <result column="Subject_createTime" property="createTime"/>
        <result column="Subject_updaterId" property="updaterId"/>
        <result column="Subject_updateTime" property="updateTime"/>
		<!-- </discriminator> -->
	</resultMap>
    
    <sql id="Sql_SelectColumns">
        tb_subject.id As Subject_id,
        tb_subject.subject_name As Subject_subjectName,
        tb_subject.desc As Subject_desc,
        tb_subject.creator_id As Subject_creatorId,
        tb_subject.create_time As Subject_createTime,
        tb_subject.updater_id As Subject_updaterId,
        tb_subject.update_time As Subject_updateTime,
	</sql>
    
    <sql id="Sql_Order">
		<trim prefix="Order By ">
    		<choose>
                <when test="SubjectSearch.sort != null">
                    Subject_${SubjectSearch.sort} 
                    <if test="SubjectSearch.order != null">
                        ${SubjectSearch.order}
                    </if>
                </when>
                <otherwise>
                    Subject_id Desc
                </otherwise>
            </choose>
		</trim>
	</sql>
    
    <sql id="Sql_Where">
        <if test="SubjectSearch.eqId != null">
			<![CDATA[ And tb_subject.id = #{SubjectSearch.eqId} ]]>
		</if>
		<if test="SubjectSearch.neId != null">
			<![CDATA[ And tb_subject.id != #{SubjectSearch.neId} ]]>
		</if>
        <if test="SubjectSearch.eqSubjectName != null">
			<![CDATA[ And tb_subject.subject_name = #{SubjectSearch.eqSubjectName} ]]>
		</if>
		<if test="SubjectSearch.lkSubjectName != null">
			<![CDATA[ And tb_subject.subject_name Like '%${SubjectSearch.lkSubjectName}%' ]]>
		</if>
        <if test="SubjectSearch.eqDesc != null">
			<![CDATA[ And tb_subject.desc = #{SubjectSearch.eqDesc} ]]>
		</if>
		<if test="SubjectSearch.lkDesc != null">
			<![CDATA[ And tb_subject.desc Like '%${SubjectSearch.lkDesc}%' ]]>
		</if>
        <if test="SubjectSearch.eqCreatorId != null">
			<![CDATA[ And tb_subject.creator_id = #{SubjectSearch.eqCreatorId} ]]>
		</if>
		<if test="SubjectSearch.neCreatorId != null">
			<![CDATA[ And tb_subject.creator_id != #{SubjectSearch.neCreatorId} ]]>
		</if>
        <if test="SubjectSearch.eqCreateTime != null">
			<![CDATA[ And date_format(tb_subject.create_time,'%Y-%m-%d') = date_format(#{SubjectSearch.eqCreateTime},'%Y-%m-%d') ]]>
		</if>
		<if test="SubjectSearch.geCreateTime != null">
			<![CDATA[ And tb_subject.create_time >= #{SubjectSearch.geCreateTime} ]]>
		</if>
		<if test="SubjectSearch.ltCreateTime != null">
			<![CDATA[ And tb_subject.create_time < #{SubjectSearch.ltCreateTime} ]]>
		</if>
        
        <if test="SubjectSearch.eqUpdaterId != null">
			<![CDATA[ And tb_subject.updater_id = #{SubjectSearch.eqUpdaterId} ]]>
		</if>
		<if test="SubjectSearch.neUpdaterId != null">
			<![CDATA[ And tb_subject.updater_id != #{SubjectSearch.neUpdaterId} ]]>
		</if>
        <if test="SubjectSearch.eqUpdateTime != null">
			<![CDATA[ And date_format(tb_subject.update_time,'%Y-%m-%d') = date_format(#{SubjectSearch.eqUpdateTime},'%Y-%m-%d') ]]>
		</if>
		<if test="SubjectSearch.geUpdateTime != null">
			<![CDATA[ And tb_subject.update_time >= #{SubjectSearch.geUpdateTime} ]]>
		</if>
		<if test="SubjectSearch.ltUpdateTime != null">
			<![CDATA[ And tb_subject.update_time < #{SubjectSearch.ltUpdateTime} ]]>
		</if>
        
    </sql>
</mapper>


