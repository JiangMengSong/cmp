<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hfxt.cmp.mapper.IProductDao">
<!-- 新增的方法写在这里 -->


<!-- 保存非空列,返回受影响的行数 -->
	<insert id="saveSelective" useGeneratedKeys="true" keyProperty="Vo.id">
		Insert Into tb_product 
		<trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="Vo.productName != null">product_name,</if>
            <if test="Vo.productCode != null">product_code,</if>
            <if test="Vo.desc != null">desc,</if>
            <if test="Vo.creatorId != null">creator_id,</if>
             create_time,
            <if test="Vo.updaterId != null">updater_id,</if>
            <if test="Vo.updateTime != null">update_time,</if>
           
		</trim>
		<trim prefix="Values (" suffix=")" suffixOverrides=",">
            <if test="Vo.productName != null">#{Vo.productName},</if>
            <if test="Vo.productCode != null">#{Vo.productCode},</if>
            <if test="Vo.desc != null">#{Vo.desc},</if>
            <if test="Vo.creatorId != null">#{Vo.creatorId},</if>
            now(),
            <if test="Vo.updaterId != null">#{Vo.updaterId},</if>
            <if test="Vo.updateTime != null">#{Vo.updateTime},</if>
            
		</trim>
	</insert>
    
    <!-- 根据主键删除-->
	<delete id="delete">
		Delete From tb_product
		Where id = #{id}
	</delete>
    
    <!-- 删除所有记录,返回受影响的行数 -->
	<delete id="deleteAll">
		Delete From tb_product
	</delete>
    
    <!-- 更新非空列,返回受影响的行数 -->
	<update id="updateSelective">
		Update tb_product
		<trim prefix="Set" suffixOverrides=",">
            <if test="Vo.productName != null">product_name = #{Vo.productName},</if>
            <if test="Vo.productCode != null">product_code = #{Vo.productCode},</if>
            <if test="Vo.desc != null">desc = #{Vo.desc},</if>
            <if test="Vo.creatorId != null">creator_id = #{Vo.creatorId},</if>
            <if test="Vo.createTime != null">create_time = #{Vo.createTime},</if>
            <if test="Vo.updaterId != null">updater_id = #{Vo.updaterId},</if>
            <if test="Vo.updateTime != null">update_time = #{Vo.updateTime},</if>
		</trim>
		Where tb_product.id = #{Vo.id}
	</update>
    
    <resultMap type="ProductVo" id="RM_Default">
        <id column="Product_id" property="id"/>
        <result column="Product_productName" property="productName"/>
        <result column="Product_productCode" property="productCode"/>
        <result column="Product_desc" property="desc"/>
        <result column="Product_creatorId" property="creatorId"/>
        <result column="Product_createTime" property="createTime"/>
        <result column="Product_updaterId" property="updaterId"/>
        <result column="Product_updateTime" property="updateTime"/>
	</resultMap>
    
     <!-- ResultMap -->
	<resultMap type="ProductVo" id="RM_getVo_Auto">
		<discriminator javaType="int" column="_chooseRM">
			<case value="0" resultMap="RM_Default" /><!-- Auto -->
		</discriminator>
	</resultMap>
    
    <!-- 根据主键查询一条记录,通过'__chooseRM'控制返回的列 -->
	<select id="getVo_Auto" resultMap="RM_getVo_Auto">
		Select
		<include refid="Sql_SelectColumns" />
		#{chooseRM} As _chooseRM
		From	tb_product	As	tb_product
		Where
		tb_product.id = #{id}
	</select>
    
    <!-- 传入id,判断是否存在该记录 -->
	<select id="isExist_Auto" resultType="boolean">
		Select Count(id) > 0
		From	tb_product	As	tb_product
		Where
		tb_product.id = #{id}
	</select>
    
    <!-- 查询记录数量 -->
	<select id="queryCount_Auto" resultType="Long">
		Select Count(tb_product.id)
		From	tb_product	As	tb_product
        <trim prefix="Where" prefixOverrides="And | Or">
			<include refid="Sql_Where"/>
		</trim>
	</select>
    
    <resultMap type="ProductVo" id="RM_queryVos_Auto">
        <discriminator javaType="int" column="_chooseRM">
			<case value="0" resultMap="RM_Default" /><!-- Auto -->
		</discriminator>
	</resultMap>
    
    <!-- 查询记录集合,通过'__chooseRM'控制返回的列 -->
	<select id="queryVos_Auto" resultMap="RM_queryVos_Auto">
		Select
		<include refid="Sql_SelectColumns"/>
		#{ProductSearch.chooseRM} As _chooseRM
		From	tb_product	As	tb_product
        <trim prefix="Where" prefixOverrides="And | Or">
			<include refid="Sql_Where"/>
		</trim>
		<include refid="Sql_Order"/>
		Limit #{ProductSearch.offset},#{ProductSearch.limit}
	</select>
    

    <resultMap type="ProductVo" id="RM_getVo_AdminView">
		<!-- <discriminator javaType="int" column="_chooseRM"> -->
        <id column="Product_id" property="id"/>
        <result column="Product_productName" property="productName"/>
        <result column="Product_productCode" property="productCode"/>
        <result column="Product_desc" property="desc"/>
        <result column="Product_creatorId" property="creatorId"/>
        <result column="Product_createTime" property="createTime"/>
        <result column="Product_updaterId" property="updaterId"/>
        <result column="Product_updateTime" property="updateTime"/>
		<!-- </discriminator> -->
	</resultMap>
    
    <!-- 根据主键查询一条记录,专供AdminView调用 -->
	<select id="getVo_AdminView" resultMap="RM_getVo_AdminView">
		Select
		<include refid="Sql_SelectColumns" />
		#{chooseRM} As _chooseRM
		From	tb_product	As	tb_product
		Where
		tb_product.id = #{id}
	</select>
    
    <resultMap type="ProductVo" id="RM_getVo_preAdminEdit">
		<!-- <discriminator javaType="int" column="_chooseRM"> -->
        <id column="Product_id" property="id"/>
        <result column="Product_productName" property="productName"/>
        <result column="Product_productCode" property="productCode"/>
        <result column="Product_desc" property="desc"/>
        <result column="Product_creatorId" property="creatorId"/>
        <result column="Product_createTime" property="createTime"/>
        <result column="Product_updaterId" property="updaterId"/>
        <result column="Product_updateTime" property="updateTime"/>
		<!-- </discriminator> -->
	</resultMap>
    
    <!-- 根据主键查询一条记录,专供preAdminEdit调用 -->
	<select id="getVo_preAdminEdit" resultMap="RM_getVo_preAdminEdit">
		Select
		<include refid="Sql_SelectColumns" />
		#{chooseRM} As _chooseRM
		From	tb_product	As	tb_product
		Where
		tb_product.id = #{id}
	</select>
    
    <resultMap type="ProductVo" id="RM_getVo_AdminEdit">
		<!-- <discriminator javaType="int" column="_chooseRM"> -->
        <id column="Product_id" property="id"/>
        <result column="Product_productName" property="productName"/>
        <result column="Product_productCode" property="productCode"/>
        <result column="Product_desc" property="desc"/>
        <result column="Product_creatorId" property="creatorId"/>
        <result column="Product_createTime" property="createTime"/>
        <result column="Product_updaterId" property="updaterId"/>
        <result column="Product_updateTime" property="updateTime"/>
		<!-- </discriminator> -->
	</resultMap>
    
    <!-- 根据主键查询一条记录,专供AdminEdit调用 -->
	<select id="getVo_AdminEdit" resultMap="RM_getVo_AdminEdit">
		Select
		<include refid="Sql_SelectColumns" />
		#{chooseRM} As _chooseRM
		From	tb_product	As	tb_product
		Where
		tb_product.id = #{id}
	</select>
    
    <resultMap type="ProductVo" id="RM_queryVos_AdminList">
		<!-- <discriminator javaType="int" column="_chooseRM"> -->
        <id column="Product_id" property="id"/>
        <result column="Product_productName" property="productName"/>
        <result column="Product_productCode" property="productCode"/>
        <result column="Product_desc" property="desc"/>
        <result column="Product_creatorId" property="creatorId"/>
        <result column="Product_createTime" property="createTime"/>
        <result column="Product_updaterId" property="updaterId"/>
        <result column="Product_updateTime" property="updateTime"/>
		<!-- </discriminator> -->
	</resultMap>
    
    <sql id="Sql_SelectColumns">
        tb_product.id As Product_id,
        tb_product.product_name As Product_productName,
        tb_product.product_code As Product_productCode,
        tb_product.desc As Product_desc,
        tb_product.creator_id As Product_creatorId,
        tb_product.create_time As Product_createTime,
        tb_product.updater_id As Product_updaterId,
        tb_product.update_time As Product_updateTime,
	</sql>
    
    <sql id="Sql_Order">
		<trim prefix="Order By ">
    		<choose>
                <when test="ProductSearch.sort != null">
                    Product_${ProductSearch.sort} 
                    <if test="ProductSearch.order != null">
                        ${ProductSearch.order}
                    </if>
                </when>
                <otherwise>
                    Product_id Desc
                </otherwise>
            </choose>
		</trim>
	</sql>
    
    <sql id="Sql_Where">
        <if test="ProductSearch.eqId != null">
			<![CDATA[ And tb_product.id = #{ProductSearch.eqId} ]]>
		</if>
		<if test="ProductSearch.neId != null">
			<![CDATA[ And tb_product.id != #{ProductSearch.neId} ]]>
		</if>
        <if test="ProductSearch.eqProductName != null">
			<![CDATA[ And tb_product.product_name = #{ProductSearch.eqProductName} ]]>
		</if>
		<if test="ProductSearch.lkProductName != null">
			<![CDATA[ And tb_product.product_name Like '%${ProductSearch.lkProductName}%' ]]>
		</if>
        <if test="ProductSearch.eqProductCode != null">
			<![CDATA[ And tb_product.product_code = #{ProductSearch.eqProductCode} ]]>
		</if>
		<if test="ProductSearch.lkProductCode != null">
			<![CDATA[ And tb_product.product_code Like '%${ProductSearch.lkProductCode}%' ]]>
		</if>
        <if test="ProductSearch.eqDesc != null">
			<![CDATA[ And tb_product.desc = #{ProductSearch.eqDesc} ]]>
		</if>
		<if test="ProductSearch.lkDesc != null">
			<![CDATA[ And tb_product.desc Like '%${ProductSearch.lkDesc}%' ]]>
		</if>
        <if test="ProductSearch.eqCreatorId != null">
			<![CDATA[ And tb_product.creator_id = #{ProductSearch.eqCreatorId} ]]>
		</if>
		<if test="ProductSearch.neCreatorId != null">
			<![CDATA[ And tb_product.creator_id != #{ProductSearch.neCreatorId} ]]>
		</if>
        <if test="ProductSearch.eqCreateTime != null">
			<![CDATA[ And date_format(tb_product.create_time,'%Y-%m-%d') = date_format(#{ProductSearch.eqCreateTime},'%Y-%m-%d') ]]>
		</if>
		<if test="ProductSearch.geCreateTime != null">
			<![CDATA[ And tb_product.create_time >= #{ProductSearch.geCreateTime} ]]>
		</if>
		<if test="ProductSearch.ltCreateTime != null">
			<![CDATA[ And tb_product.create_time < #{ProductSearch.ltCreateTime} ]]>
		</if>
        
        <if test="ProductSearch.eqUpdaterId != null">
			<![CDATA[ And tb_product.updater_id = #{ProductSearch.eqUpdaterId} ]]>
		</if>
		<if test="ProductSearch.neUpdaterId != null">
			<![CDATA[ And tb_product.updater_id != #{ProductSearch.neUpdaterId} ]]>
		</if>
        <if test="ProductSearch.eqUpdateTime != null">
			<![CDATA[ And date_format(tb_product.update_time,'%Y-%m-%d') = date_format(#{ProductSearch.eqUpdateTime},'%Y-%m-%d') ]]>
		</if>
		<if test="ProductSearch.geUpdateTime != null">
			<![CDATA[ And tb_product.update_time >= #{ProductSearch.geUpdateTime} ]]>
		</if>
		<if test="ProductSearch.ltUpdateTime != null">
			<![CDATA[ And tb_product.update_time < #{ProductSearch.ltUpdateTime} ]]>
		</if>
        
    </sql>
</mapper>


